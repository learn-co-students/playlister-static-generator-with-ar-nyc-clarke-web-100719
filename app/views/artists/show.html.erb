<h1><%= @artist.name %></h1>

<h3>Songs</h3>
<ul>
    <% @songs.each do |song| %>
        <li><a href="songs/<%= song.to_slug %>.html"><%= song.artist.name + " - " + song.name + " - " + song.genre.name %></a></li>
    <% end %>
</ul>

<h3>Genres</h3>
<ul>
    <% @genres.each do |genre| %>
        <li><a href="genres/<%= genre.to_slug %>.html"><%= genre.name %></a></li>
    <% end %>
</ul>