<h1><%= @genre.name %></h1>

<h3>Songs</h3>
<ul>
    <% @songs.each do |song| %>
        <li><a href="songs/<%= song.to_slug %>.html"><%= song.artist.name + " - " + song.name + " - " + song.genre.name %> </a></li>
    <% end %>
</ul>

<h3>Artists</h3>
<ul>
    <% @artists.each do |artist| %>
        <li><a href="artists/<%= artist.to_slug %>.html"><%= artist.name %></a></li>
    <% end %>
</ul>